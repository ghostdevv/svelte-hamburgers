{
  "name": "svelte-hamburgers",
  "version": "3.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "svelte": "./src/index.js",
  "types": "./dist/types/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "run-s build:*",
    "build:css": "sass src/scss/hamburger.scss dist/css/hamburger.css",
    "build:css-min": "sass src/scss/hamburger.scss dist/css/hamburger.min.css --style=compressed",
    "build:lib": "rollup -c",
    "dev": "run-p dev:*",
    "dev:css": "sass src/scss/hamburger.scss dist/css/hamburger.css --watch",
    "dev:lib": "rollup -c -w",
    "dev:dev": "cd dev && npm run dev"
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.56.3",
    "rollup-plugin-svelte": "^7.1.0",
    "sass": "^1.32.12",
    "sveld": "^0.10.1",
    "svelte": "^3.38.2"
  },
  "description": "Svelte Hamburgers is a component based on the popular hamburgers.css",
  "author": "GHOST",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ghostdevv/svelte-hamburgers.git"
  },
  "bugs": {
    "url": "https://github.com/ghostdevv/svelte-hamburgers/issues"
  },
  "keywords": [
    "svelte",
    "svelte hamburger",
    "svelte hamburgers",
    "svelte burger",
    "svelte burgers",
    "hamburger",
    "hamburgers",
    "component",
    "hamburger component",
    "svelte hamburger component",
    "svelte burger component"
  ]
}
